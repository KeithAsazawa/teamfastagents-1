<div class="row-fluid">
	<div class="span12 text-center">
		<img src="images/fastagentslogo.png" />
		<h3>Experienced. <span class="gray_text">Dedicated.</span> <span style="color: #F99D1C; background-color: #000; padding: 5px;">FAST.</span></h3>
	</div>
</div>
<!-- Featured Listings -->
<div class="row-fluid">
	<div class="span12 featured_listings text-center">
		<h1 class="white_text">Featured Listings</h3>
		<% @listings.each do |listing| %>
			<div class="span3">
				<span class="price">$<%= listing.price %></span>
				<% if listing.picture_file_name %>
					<%= link_to image_tag(listing.picture.url(:medium)), listing %>
				<% end %>
				<h4><%= listing.Number %> <%= listing.Address %></h4>
				<small><%= listing.Address2 %></small>
				<small><%= listing.City %> <%= listing.State %>, <%= listing.Zip %></small>
				<table class="table">
					<tbody>
						<tr>
							<td>Bed: <%= listing.Rooms  %></td>
							<td>Bath: <%= listing.Bathrooms  %></td>
						</tr>
						<tr>
							<td>SqFt: <%= listing.SqFt  %></td>
							<td>Lot: <%= listing.Lot  %></td>
						</tr>
					</tbody>
				</table>
			    <p><%= listing.Description %> <br><br>
			    	<h4><%= link_to 'Details', listing, class: "orange_text" %></h4>
			    </p>
			</div>
		<% end %>
	</div>
</div>
<div class="row-fluid">
	<div class="span12 text-center">
		<h1>About Us</h1>
	</div>
</div>
